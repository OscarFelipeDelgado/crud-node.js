<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>id</td>
            <td>Name</td>
            <td>Address</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (customers) { %> <% for(var i = 0; i < customers.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= customers[i].id %></td>
            <td><%= customers[i].name %></td>
            <td><%= customers[i].email %></td>
            <td class="d-flex gap-1">
              <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/add" method="POST">
          <input
            type="number"
            name="id"
            placeholder="Id"
            class="form-control mb-2"
          />
          <!-- <input 
            type="number"
            name="role_id"
            placeholder="Role_id"
            class="form-control mb-2"
            -->
          />
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="email"
            name="email"
            placeholder="Address"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="avatar"
            placeholder="Avatar"
            class="form-control mb-2"
          />
          <!-- <input
            type="datetime"
            name="email_verified_at"
            placeholder="Email_verified_at"
            class="form-control mb-2"
          /> -->
          <input
            type="text"
            name="password"
            placeholder="Password"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="remember_token"
            placeholder="Remember_token"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="settings"
            placeholder="Settings"
            class="form-control mb-2"
          />
          <!-- <input
            type="text"
            name="created_at"
            placeholder="Created_at"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="updated_at"
            placeholder="Updated_at"
            class="form-control mb-2"
          /> -->
          <button type="submit" class="btn btn-info">save customer</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
